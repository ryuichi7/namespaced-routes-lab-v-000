<h2>Access Settings</h2>

<%= form_for @preference, url: admin_access_path(@preference) do |f| %>
	<table>
		<tr>
			<td><strong><%= f.label "Allow Song Creation:" %></td></strong>
		</tr>
		<tr>
			<td><%= f.label :allow_create_songs, "Yes" %></td>
			<td><%= f.radio_button :allow_create_songs, :true %></td>
		</tr>
		<tr>
			<td><%= f.label :allow_create_songs, "No" %></td>
			<td><%= f.radio_button :allow_create_songs, :false %></td>		
		</tr>
		<tr>
			<td><strong><%= f.label "Artist Order:" %></td></strong>
		</tr>
		<tr>
			<td><%= f.label :allow_create_artists, "Yes" %></td>
			<td><%= f.radio_button :allow_create_artists, :true %></td>
		</tr>
		<tr>
			<td><%= f.label :allow_create_artists, "No" %></td>
			<td><%= f.radio_button :allow_create_artists, :false %></td>		
		</tr>
	</table>
	
	<%= f.submit %>

<% end %>