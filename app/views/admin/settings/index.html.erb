<h2>Settings</h2>



<%= form_for @preference, url: admin_settings_path(@preference) do |f| %>
	<table>
		<tr>
			<td><strong><%= f.label "Song Order:" %></td></strong>
		</tr>
		<tr>
			<td><%= f.label :song_sort_order, "Ascending" %></td>
			<td><%= f.radio_button :song_sort_order, "ASC" %></td>
		</tr>
		<tr>
			<td><%= f.label :song_sort_order, "Descending" %></td>
			<td><%= f.radio_button :song_sort_order, "DESC" %></td>		
		</tr>
		<tr>
			<td><strong><%= f.label "Artist Order:" %></td></strong>
		</tr>
		<tr>
			<td><%= f.label :artist_sort_order, "Ascending" %></td>
			<td><%= f.radio_button :artist_sort_order, "ASC" %></td>
		</tr>
		<tr>
			<td><%= f.label :artist_sort_order, "Descending" %></td>
			<td><%= f.radio_button :artist_sort_order, "DESC" %></td>		
		</tr>
	</table>
	
	<%= f.submit %>

<% end %>


